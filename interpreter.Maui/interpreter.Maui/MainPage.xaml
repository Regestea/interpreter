<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:interpreter.Maui"
             x:Class="interpreter.Maui.MainPage">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#C8B5F0" Offset="0.0" />
            <GradientStop Color="#B5E8D9" Offset="0.33" />
            <GradientStop Color="#FFCFB5" Offset="0.66" />
            <GradientStop Color="#B5DBF0" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <local:FrequencyChartDrawable x:Key="FrequencyChartDrawable"/>
    </ContentPage.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <Border Background="{StaticResource GlassSurfaceBrush}"
                    x:Name="MainBorder"
                    StrokeThickness="1"
                    Stroke="#30FFFFFF"
                    Padding="24"
                    Margin="16"
                    Opacity="0.96">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="26"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#40FFFFFF"
                            Offset="0,12"
                            Radius="40"
                            Opacity="0.35"/>
                </Border.Shadow>
                <Grid RowSpacing="20">
                <!-- Initial State -->
                <VerticalStackLayout x:Name="InitialStateLayout" 
                                   Spacing="16" 
                                   VerticalOptions="Center"
                                   IsVisible="True">
                    
                    <!-- Language Picker Card -->
                    <Border BackgroundColor="{StaticResource GlassWhite}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            Padding="20,16"
                            Opacity="0"
                            x:Name="LanguagePickerBorder">
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,10"
                                    Radius="30"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="🌍 Language"
                                   TextColor="{AppThemeBinding Light={StaticResource AppPurple}, Dark=White}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                            <Picker x:Name="LanguagePicker"
                                    TextColor="{AppThemeBinding Light={StaticResource AppTextDark}, Dark=White}"
                                    TitleColor="{AppThemeBinding Light={StaticResource AppTextGray}, Dark=White}"
                                    Title="Select Language"
                                    FontSize="16">
                                <Picker.Items>
                                    <x:String>🇮🇷 Persian</x:String>
                                    <x:String>🇬🇧 English</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Mode Picker Card -->
                    <Border BackgroundColor="{StaticResource GlassWhite}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            Padding="20,16"
                            Opacity="0"
                            x:Name="ModePickerBorder">
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,10"
                                    Radius="30"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="⚙️ Mode"
                                   TextColor="{AppThemeBinding Light={StaticResource AppMint}, Dark=White}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                            <Picker x:Name="ModePicker"
                                    TextColor="{AppThemeBinding Light={StaticResource AppTextDark}, Dark=White}"
                                    TitleColor="{AppThemeBinding Light={StaticResource AppTextGray}, Dark=White}"
                                    Title="Select Mode"
                                    FontSize="16">
                                <Picker.Items>
                                    <x:String>🔄 Translate Everything</x:String>
                                    <x:String>🤫 Ignore My Talks</x:String>
                                    <x:String>💬 Interpreter</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>
                    
                         <!-- Bottom Buttons Grid -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <!-- Detect My Voice Tune Button -->
                        <Border Grid.Column="0"
                                x:Name="VoiceTuneButton"
                                BackgroundColor="{StaticResource GlassWhite}"
                                StrokeThickness="1"
                                Stroke="#40FFFFFF"
                                Padding="16,20"
                                Opacity="0"
                                TranslationY="20">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource AppCoral}"
                                        Offset="0,6"
                                        Radius="15"
                                        Opacity="0.2"/>
                            </Border.Shadow>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="18"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnVoiceTuneClicked"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                                <Label Text="🎵"
                                       FontSize="28"
                                       HorizontalOptions="Center"/>
                                <Label Text="Voice Tune"
                                       TextColor="{AppThemeBinding Light={StaticResource AppCoral}, Dark=White}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Adjust Environment Noise Button -->
                        <Border Grid.Column="1"
                                x:Name="NoiseButton"
                                BackgroundColor="{StaticResource GlassWhite}"
                                StrokeThickness="1"
                                Stroke="#40FFFFFF"
                                Padding="16,20"
                                Opacity="0"
                                TranslationY="20">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource AppCyan}"
                                        Offset="0,6"
                                        Radius="15"
                                        Opacity="0.2"/>
                            </Border.Shadow>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="18"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNoiseAdjustClicked"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                                <Label Text="🔇"
                                       FontSize="28"
                                       HorizontalOptions="Center"/>
                                <Label Text="Noise Control"
                                       TextColor="{AppThemeBinding Light={StaticResource AppCyan}, Dark=White}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <!-- Start Button -->
                    <Border x:Name="StartButton"
                            StrokeThickness="3"
                            Stroke="#90FFFFFF"
                            WidthRequest="180"
                            HeightRequest="180"
                            HorizontalOptions="Center"
                            Margin="0,30,0,30">
                        <Border.Background>
                            <RadialGradientBrush Center="0.5,0.5" Radius="1.0">
                                <GradientStop Color="#7cc8a5" Offset="0.0" />
                                <GradientStop Color="#5cb88d" Offset="1.0" />
                            </RadialGradientBrush>
                        </Border.Background>
                        <Border.Shadow>
                            <Shadow Brush="#7cc8a5"
                                    Offset="0,12"
                                    Radius="35"
                                    Opacity="0.5"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <Ellipse/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStartClicked"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                            <Label Text="▶"
                                   TextColor="White"
                                   FontSize="52"
                                   HorizontalOptions="Center"
                                   FontAttributes="Bold"
                                   Margin="8,0,0,0"/>
                            <Label Text="START"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>

               
                </VerticalStackLayout>

                <!-- Recording State -->
                <VerticalStackLayout x:Name="RecordingStateLayout" 
                                   Spacing="20" 
                                   VerticalOptions="Center"
                                   IsVisible="False"
                                   Opacity="0">
                    
                    <!-- Text Display Card -->
                    <Border BackgroundColor="{StaticResource GlassWhite}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            Padding="24"
                            HeightRequest="140"
                            x:Name="TranscriptBorder">
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="24"/>
                        </Border.StrokeShape>
                        <ScrollView>
                            <Label x:Name="TranscriptLabel"
                                   Text="This is a sample text for the transcription area. The recognized speech will appear here in real-time as you speak."
                                   TextColor="{StaticResource AppTextDark}"
                                   FontSize="16"
                                   LineHeight="1.5"/>
                        </ScrollView>
                    </Border>

                    <!-- Stop Button -->
                    <Border x:Name="StopButton"
                            StrokeThickness="3"
                            Stroke="#90FFFFFF"
                            WidthRequest="180"
                            HeightRequest="180"
                            HorizontalOptions="Center"
                            Margin="0,20,0,20">
                        <Border.Background>
                            <RadialGradientBrush Center="0.5,0.5" Radius="1.0">
                                <GradientStop Color="#ff6b6b" Offset="0.0" />
                                <GradientStop Color="#ee5a52" Offset="1.0" />
                            </RadialGradientBrush>
                        </Border.Background>
                        <Border.Shadow>
                            <Shadow Brush="#ff6b6b"
                                    Offset="0,12"
                                    Radius="35"
                                    Opacity="0.5"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <Ellipse/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStopClicked"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                            <Label Text="⏹"
                                   TextColor="White"
                                   FontSize="52"
                                   HorizontalOptions="Center"
                                   FontAttributes="Bold"/>
                            <Label Text="STOP"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Frequency Chart Card -->
                    <Border BackgroundColor="{StaticResource GlassWhite}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            HeightRequest="150"
                            Padding="20"
                            x:Name="ChartBorder">
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="24"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="12">
                            <Label Text="📊 Voice Frequency"
                                   TextColor="{StaticResource AppMint}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                            <GraphicsView x:Name="FrequencyChartView" 
                                          HeightRequest="100"
                                          Drawable="{StaticResource FrequencyChartDrawable}"/>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </ScrollView>

        <!-- Menu Flyout -->
        <Border x:Name="MenuFlyout"
                IsVisible="False"
                Opacity="0"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="10,5"
                BackgroundColor="{StaticResource GlassWhite}"
                StrokeThickness="1"
                Stroke="#40FFFFFF"
                Padding="16"
                MinimumWidthRequest="180">
            <Border.Shadow>
                <Shadow Brush="#40000000"
                        Offset="0,8"
                        Radius="25"
                        Opacity="0.35"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="12">
                <Label Text="⚙️ Settings"
                       TextColor="{StaticResource AppTextDark}"
                       FontSize="16"
                       FontAttributes="Bold"
                       Margin="0,0,0,8"/>
                
                <!-- Theme Toggle Button -->
                <Border BackgroundColor="Transparent"
                        StrokeThickness="0"
                        Padding="8">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnThemeToggleClicked"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="12">
                        <Label x:Name="ThemeIcon"
                               Text="🌙"
                               FontSize="20"
                               VerticalOptions="Center"/>
                        <Label x:Name="ThemeLabel"
                               Text="Dark Theme"
                               TextColor="{StaticResource AppTextDark}"
                               FontSize="14"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentPage>
