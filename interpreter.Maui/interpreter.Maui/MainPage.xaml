<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:interpreter.Maui"
             xmlns:drawables="clr-namespace:interpreter.Maui.Drawables"
             x:Class="interpreter.Maui.MainPage">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0B0F14" Offset="0.0" />
            <GradientStop Color="#0C1220" Offset="0.5" />
            <GradientStop Color="#0B0F14" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <drawables:FrequencyChartDrawable x:Key="FrequencyChartDrawable"/>
    </ContentPage.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <Border Background="{StaticResource GlassSurfaceBrushDark}"
                    x:Name="MainBorder"
                    StrokeThickness="1"
                    Stroke="#30FFFFFF"
                    Opacity="0.96">
                <Border.Padding>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="16"
                             Tablet="32"
                             Desktop="32"/>
                </Border.Padding>
                <Border.Margin>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="8"
                             Tablet="20"
                             Desktop="20"/>
                </Border.Margin>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="26"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#40FFFFFF"
                            Offset="0,12"
                            Radius="40"
                            Opacity="0.35"/>
                </Border.Shadow>
                <Grid RowSpacing="20">
                <!-- Initial State -->
                <VerticalStackLayout x:Name="InitialStateLayout" 
                                   Spacing="16" 
                                   VerticalOptions="Start"
                                   Margin="0,20,0,200"
                                   IsVisible="True">
                    
                    <!-- Language Picker Card -->
                    <Border BackgroundColor="{StaticResource DarkCardBackground}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            Opacity="0"
                            x:Name="LanguagePickerBorder">
                        <Border.Padding>
                            <OnIdiom x:TypeArguments="Thickness"
                                     Phone="16,12"
                                     Tablet="20,16"
                                     Desktop="20,16"/>
                        </Border.Padding>
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,10"
                                    Radius="30"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="🌍 Language"
                                   TextColor="{StaticResource AppPurple}"
                                   FontAttributes="Bold">
                                <Label.FontSize>
                                    <OnIdiom x:TypeArguments="x:Double"
                                             Phone="13"
                                             Tablet="14"
                                             Desktop="14"/>
                                </Label.FontSize>
                            </Label>
                            <Picker x:Name="LanguagePicker"
                                    TextColor="{StaticResource DarkTextPrimary}"
                                    TitleColor="{StaticResource DarkTextSecondary}"
                                    Title="Select Language">
                                <Picker.FontSize>
                                    <OnIdiom x:TypeArguments="x:Double"
                                             Phone="14"
                                             Tablet="16"
                                             Desktop="16"/>
                                </Picker.FontSize>
                                <Picker.Items>
                                    <x:String>🇮🇷 Persian</x:String>
                                    <x:String>🇬🇧 English</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Mode Picker Card -->
                    <Border BackgroundColor="{StaticResource DarkCardBackground}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            Opacity="0"
                            x:Name="ModePickerBorder">
                        <Border.Padding>
                            <OnIdiom x:TypeArguments="Thickness"
                                     Phone="16,12"
                                     Tablet="20,16"
                                     Desktop="20,16"/>
                        </Border.Padding>
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,10"
                                    Radius="30"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="⚙️ Mode"
                                   TextColor="{StaticResource AppMint}"
                                   FontAttributes="Bold">
                                <Label.FontSize>
                                    <OnIdiom x:TypeArguments="x:Double"
                                             Phone="13"
                                             Tablet="14"
                                             Desktop="14"/>
                                </Label.FontSize>
                            </Label>
                            <Picker x:Name="ModePicker"
                                    TextColor="{StaticResource DarkTextPrimary}"
                                    TitleColor="{StaticResource DarkTextSecondary}"
                                    Title="Select Mode">
                                <Picker.FontSize>
                                    <OnIdiom x:TypeArguments="x:Double"
                                             Phone="14"
                                             Tablet="16"
                                             Desktop="16"/>
                                </Picker.FontSize>
                                <Picker.Items>
                                    <x:String>🔄 Translate Everything</x:String>
                                    <x:String>🤫 Ignore My Talks</x:String>
                                    <x:String>💬 Interpreter</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>
                    
                         <!-- Bottom Buttons Grid -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <!-- Detect My Voice Tune Button -->
                        <Border Grid.Column="0"
                                x:Name="VoiceTuneButton"
                                BackgroundColor="{StaticResource DarkCardBackground}"
                                StrokeThickness="1"
                                Stroke="#40FFFFFF">
                            <Border.Padding>
                                <OnIdiom x:TypeArguments="Thickness"
                                         Phone="12,16"
                                         Tablet="16,20"
                                         Desktop="16,20"/>
                            </Border.Padding>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource AppCoral}"
                                        Offset="0,6"
                                        Radius="15"
                                        Opacity="0.2"/>
                            </Border.Shadow>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="18"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnVoiceTuneClicked"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                                <Label Text="🎵"
                                       HorizontalOptions="Center">
                                    <Label.FontSize>
                                        <OnIdiom x:TypeArguments="x:Double"
                                                 Phone="24"
                                                 Tablet="28"
                                                 Desktop="28"/>
                                    </Label.FontSize>
                                </Label>
                                <Label Text="Voice Tune"
                                       TextColor="{StaticResource AppCoral}"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center">
                                    <Label.FontSize>
                                        <OnIdiom x:TypeArguments="x:Double"
                                                 Phone="11"
                                                 Tablet="13"
                                                 Desktop="13"/>
                                    </Label.FontSize>
                                </Label>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Adjust Environment Noise Button -->
                        <Border Grid.Column="1"
                                x:Name="NoiseButton"
                                BackgroundColor="{StaticResource DarkCardBackground}"
                                StrokeThickness="1"
                                Stroke="#40FFFFFF">
                            <Border.Padding>
                                <OnIdiom x:TypeArguments="Thickness"
                                         Phone="12,16"
                                         Tablet="16,20"
                                         Desktop="16,20"/>
                            </Border.Padding>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource AppCyan}"
                                        Offset="0,6"
                                        Radius="15"
                                        Opacity="0.2"/>
                            </Border.Shadow>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="18"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNoiseAdjustClicked"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                                <Label Text="🔇"
                                       HorizontalOptions="Center">
                                    <Label.FontSize>
                                        <OnIdiom x:TypeArguments="x:Double"
                                                 Phone="24"
                                                 Tablet="28"
                                                 Desktop="28"/>
                                    </Label.FontSize>
                                </Label>
                                <Label Text="Noise Control"
                                       TextColor="{StaticResource AppCyan}"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center">
                                    <Label.FontSize>
                                        <OnIdiom x:TypeArguments="x:Double"
                                                 Phone="11"
                                                 Tablet="13"
                                                 Desktop="13"/>
                                    </Label.FontSize>
                                </Label>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </VerticalStackLayout>

                <!-- Recording State -->
                <VerticalStackLayout x:Name="RecordingStateLayout" 
                                   Spacing="20" 
                                   VerticalOptions="Start"
                                   Margin="0,20,0,200"
                                   IsVisible="False"
                                   Opacity="0">
                    
                    <!-- Text Display Card -->
                    <Border BackgroundColor="{StaticResource DarkCardBackground}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            x:Name="TranscriptBorder">
                        <Border.Padding>
                            <OnIdiom x:TypeArguments="Thickness"
                                     Phone="16"
                                     Tablet="24"
                                     Desktop="24"/>
                        </Border.Padding>
                        <Border.HeightRequest>
                            <OnIdiom x:TypeArguments="x:Double"
                                     Phone="120"
                                     Tablet="140"
                                     Desktop="140"/>
                        </Border.HeightRequest>
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="24"/>
                        </Border.StrokeShape>
                        <ScrollView>
                            <Label x:Name="TranscriptLabel"
                                   Text="This is a sample text for the transcription area. The recognized speech will appear here in real-time as you speak."
                                   TextColor="{StaticResource DarkTextPrimary}"
                                   LineHeight="1.5">
                                <Label.FontSize>
                                    <OnIdiom x:TypeArguments="x:Double"
                                             Phone="14"
                                             Tablet="16"
                                             Desktop="16"/>
                                </Label.FontSize>
                            </Label>
                        </ScrollView>
                    </Border>
                    
                    <!-- Frequency Chart Card -->
                    <Border BackgroundColor="{StaticResource DarkCardBackground}"
                            StrokeThickness="1"
                            Stroke="#40FFFFFF"
                            x:Name="ChartBorder">
                        <Border.Padding>
                            <OnIdiom x:TypeArguments="Thickness"
                                     Phone="16"
                                     Tablet="20"
                                     Desktop="20"/>
                        </Border.Padding>
                        <Border.HeightRequest>
                            <OnIdiom x:TypeArguments="x:Double"
                                     Phone="130"
                                     Tablet="150"
                                     Desktop="150"/>
                        </Border.HeightRequest>
                        <Border.Shadow>
                            <Shadow Brush="#40000000"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="24"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="12">
                            <Label Text="📊 Voice Frequency"
                                   TextColor="{StaticResource AppMint}"
                                   FontAttributes="Bold">
                                <Label.FontSize>
                                    <OnIdiom x:TypeArguments="x:Double"
                                             Phone="13"
                                             Tablet="14"
                                             Desktop="14"/>
                                </Label.FontSize>
                            </Label>
                            <GraphicsView x:Name="FrequencyChartView" 
                                          HeightRequest="100"
                                          Drawable="{StaticResource FrequencyChartDrawable}"/>
                        </VerticalStackLayout>
                    </Border>
                    
                </VerticalStackLayout>

                <!-- Action Button (Start/Stop) - Always visible, positioned at bottom -->
                <Border x:Name="ActionButton"
                        StrokeThickness="3"
                        Stroke="#90FFFFFF"
                        HorizontalOptions="Center"
                        VerticalOptions="End"
                        Margin="0,0,0,20">
                    <Border.WidthRequest>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="150"
                                 Tablet="180"
                                 Desktop="180"/>
                    </Border.WidthRequest>
                    <Border.HeightRequest>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="150"
                                 Tablet="180"
                                 Desktop="180"/>
                    </Border.HeightRequest>
                    <Border.Background>
                        <RadialGradientBrush Center="0.5,0.5" Radius="1.0">
                            <GradientStop Color="#7cc8a5" Offset="0.0" />
                            <GradientStop Color="#5cb88d" Offset="1.0" />
                        </RadialGradientBrush>
                    </Border.Background>
                    <Border.Shadow>
                        <Shadow Brush="#7cc8a5"
                                Offset="0,12"
                                Radius="35"
                                Opacity="0.5"/>
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <Ellipse/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnActionButtonClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label x:Name="ActionIcon"
                               Text="▶"
                               TextColor="White"
                               HorizontalOptions="Center"
                               FontAttributes="Bold"
                               Margin="8,0,0,0">
                            <Label.FontSize>
                                <OnIdiom x:TypeArguments="x:Double"
                                         Phone="42"
                                         Tablet="52"
                                         Desktop="52"/>
                            </Label.FontSize>
                        </Label>
                        <Label x:Name="ActionText"
                               Text="START"
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalOptions="Center">
                            <Label.FontSize>
                                <OnIdiom x:TypeArguments="x:Double"
                                         Phone="16"
                                         Tablet="20"
                                         Desktop="20"/>
                            </Label.FontSize>
                        </Label>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>
    </ScrollView>

        <!-- Menu Flyout -->
            <Border x:Name="MenuFlyout"
                IsVisible="False"
                Opacity="0"
                HorizontalOptions="End"
                VerticalOptions="Start"
                BackgroundColor="{StaticResource DarkSurface}"
                StrokeThickness="1"
                Stroke="#40BB00FF">
                <Border.Padding>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="12"
                             Tablet="16"
                             Desktop="16"/>
                </Border.Padding>
                <Border.Margin>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="8,4"
                             Tablet="10,5"
                             Desktop="10,5"/>
                </Border.Margin>
                <Border.MinimumWidthRequest>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="160"
                             Tablet="180"
                             Desktop="180"/>
                </Border.MinimumWidthRequest>
                <Border.Shadow>
                <Shadow Brush="#80BB00FF"
                        Offset="0,8"
                        Radius="25"
                        Opacity="0.35"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="12">
                <Label Text="⚙️ Settings"
                       TextColor="{StaticResource DarkTextPrimary}"
                       FontAttributes="Bold"
                       Margin="0,0,0,8">
                    <Label.FontSize>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="14"
                                 Tablet="16"
                                 Desktop="16"/>
                    </Label.FontSize>
                </Label>
                
                <!-- Theme Toggle Button -->
                <Border BackgroundColor="Transparent"
                        StrokeThickness="0"
                        Padding="8">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnThemeToggleClicked"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="12">
                        <Label x:Name="ThemeIcon"
                               Text="🌙"
                               VerticalOptions="Center">
                            <Label.FontSize>
                                <OnIdiom x:TypeArguments="x:Double"
                                         Phone="18"
                                         Tablet="20"
                                         Desktop="20"/>
                            </Label.FontSize>
                        </Label>
                        <Label x:Name="ThemeLabel"
                               Text="Dark Mode"
                               TextColor="{StaticResource DarkTextPrimary}"
                               VerticalOptions="Center">
                            <Label.FontSize>
                                <OnIdiom x:TypeArguments="x:Double"
                                         Phone="13"
                                         Tablet="14"
                                         Desktop="14"/>
                            </Label.FontSize>
                        </Label>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Border>

        <!-- Modal Overlay -->
        <Grid x:Name="ModalContainer"
              IsVisible="False"
              Opacity="0"
              BackgroundColor="#80000000"
              ZIndex="1000"
              HorizontalOptions="Fill"
              VerticalOptions="Fill">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnModalBackgroundTapped"/>
            </Grid.GestureRecognizers>
            
            <Border x:Name="ModalContentBorder"
                    BackgroundColor="#0D0D18"
                    StrokeThickness="2"
                    Stroke="#7000FFFF"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    MaximumWidthRequest="400"
                    Scale="0.9"
                    Margin="20">
                <Border.Padding>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="20"
                             Tablet="24"
                             Desktop="24"/>
                </Border.Padding>
                <Border.Shadow>
                    <Shadow Brush="#9000FFFF"
                            Offset="0,12"
                            Radius="45"
                            Opacity="0.7"/>
                </Border.Shadow>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24"/>
                </Border.StrokeShape>
                <!-- Content will be set dynamically -->
            </Border>
        </Grid>
    </Grid>

</ContentPage>
