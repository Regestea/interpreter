<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:interpreter.Maui"
             xmlns:drawables="clr-namespace:interpreter.Maui.Drawables"
             xmlns:components="clr-namespace:interpreter.Maui.Components"
             x:Class="interpreter.Maui.MainPage">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0B0F14" Offset="0.0" />
            <GradientStop Color="#0C1220" Offset="0.5" />
            <GradientStop Color="#0B0F14" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <drawables:FrequencyChartDrawable x:Key="FrequencyChartDrawable"/>
    </ContentPage.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <Border Background="{StaticResource GlassSurfaceBrushDark}"
                    x:Name="MainBorder"
                    StrokeThickness="1"
                    Stroke="#30FFFFFF"
                    Opacity="0.96">
                <Border.Padding>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="16"
                             Tablet="32"
                             Desktop="32"/>
                </Border.Padding>
                <Border.Margin>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="8"
                             Tablet="20"
                             Desktop="20"/>
                </Border.Margin>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="26"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#40FFFFFF"
                            Offset="0,12"
                            Radius="40"
                            Opacity="0.35"/>
                </Border.Shadow>
                <Grid RowSpacing="20">
                <!-- Initial State -->
                <VerticalStackLayout x:Name="InitialStateLayout" 
                                   Spacing="16" 
                                   VerticalOptions="Start"
                                   Margin="0,20,0,200"
                                   IsVisible="True">
                    
                    <!-- Language Picker Card -->
                    <components:PickerCard x:Name="LanguagePickerBorder"
                                          Title="🌍 Language"
                                          TitleColor="{StaticResource AppPurple}"
                                          PickerTitle="Select Language"
                                          CardBackgroundColor="{StaticResource DarkCardBackground}"
                                          Opacity="0">
                        <components:PickerCard.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>🇮🇷 Persian</x:String>
                                <x:String>🇬🇧 English</x:String>
                            </x:Array>
                        </components:PickerCard.ItemsSource>
                    </components:PickerCard>

                    <!-- Mode Picker Card -->
                    <components:PickerCard x:Name="ModePickerBorder"
                                          Title="⚙️ Mode"
                                          TitleColor="{StaticResource AppMint}"
                                          PickerTitle="Select Mode"
                                          CardBackgroundColor="{StaticResource DarkCardBackground}"
                                          Opacity="0">
                        <components:PickerCard.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>🔄 Translate Everything</x:String>
                                <x:String>🤫 Ignore My Talks</x:String>
                                <x:String>💬 Interpreter</x:String>
                            </x:Array>
                        </components:PickerCard.ItemsSource>
                    </components:PickerCard>
                    
                    <!-- Bottom Buttons Grid -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <!-- Voice Tune Button -->
                        <components:IconButton x:Name="VoiceTuneButton"
                                              Grid.Column="0"
                                              Icon="🎵"
                                              Text="Voice Tune"
                                              TextColor="{StaticResource AppCoral}"
                                              ShadowColor="{StaticResource AppCoral}"
                                              CardBackgroundColor="{StaticResource DarkCardBackground}"
                                              Clicked="OnVoiceTuneClicked"/>

                        <!-- Noise Control Button -->
                        <components:IconButton x:Name="NoiseButton"
                                              Grid.Column="1"
                                              Icon="🔇"
                                              Text="Noise Control"
                                              TextColor="{StaticResource AppCyan}"
                                              ShadowColor="{StaticResource AppCyan}"
                                              CardBackgroundColor="{StaticResource DarkCardBackground}"
                                              Clicked="OnNoiseAdjustClicked"/>
                    </Grid>
                </VerticalStackLayout>

                <!-- Recording State -->
                <VerticalStackLayout x:Name="RecordingStateLayout" 
                                   Spacing="20" 
                                   VerticalOptions="Start"
                                   Margin="0,20,0,200"
                                   IsVisible="False"
                                   Opacity="0">
                    
                    <!-- Transcript Card -->
                    <components:TranscriptCard x:Name="TranscriptBorder"
                                              TranscriptText="This is a sample text for the transcription area. The recognized speech will appear here in real-time as you speak."
                                              CardBackgroundColor="{StaticResource DarkCardBackground}"/>
                    
                    <!-- Frequency Chart Card -->
                    <components:FrequencyChartCard x:Name="ChartBorder"
                                                   Title="📊 Voice Frequency"
                                                   TitleColor="{StaticResource AppMint}"
                                                   CardBackgroundColor="{StaticResource DarkCardBackground}"
                                                   ChartDrawable="{StaticResource FrequencyChartDrawable}"/>
                    
                </VerticalStackLayout>

                <!-- Voice Detector State -->
                <VerticalStackLayout x:Name="VoiceDetectorLayout" 
                                   Spacing="20" 
                                   VerticalOptions="Start"
                                   Margin="0,20,0,20"
                                   IsVisible="False"
                                   Opacity="0">
                    
                    <!-- Header with Back Button -->
                    <Grid ColumnDefinitions="Auto,*" Margin="0,0,0,10">
                        <Border Grid.Column="0"
                                BackgroundColor="#1F2937"
                                StrokeThickness="0"
                                HeightRequest="40"
                                WidthRequest="40"
                                HorizontalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnVoiceDetectorBackClicked"/>
                            </Border.GestureRecognizers>
                            <Label Text="←"
                                   TextColor="White"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <Label Grid.Column="1"
                               Text="🎤 Voice Detector"
                               TextColor="White"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Grid>
                    
                    <!-- Voice Profile Form Component -->
                    <components:VoiceProfileForm x:Name="ProfileForm"
                                                 SaveClicked="OnProfileFormSaveClicked"
                                                 RecordingStarted="OnProfileFormRecordingStarted"
                                                 RecordingStopped="OnProfileFormRecordingStopped"
                                                 ValidationFailed="OnProfileFormValidationFailed"/>
                    
                    <!-- Voice Profile List Component -->
                    <components:VoiceProfileList x:Name="ProfileList"
                                                 RefreshClicked="OnProfileListRefreshClicked"
                                                 DeleteClicked="OnProfileListDeleteClicked"/>
                    
                </VerticalStackLayout>

                <!-- Action Button (Start/Stop) - Always visible, positioned at bottom -->
                <Border x:Name="ActionButton"
                        StrokeThickness="3"
                        Stroke="#90FFFFFF"
                        HorizontalOptions="Center"
                        VerticalOptions="End"
                        Margin="0,0,0,20">
                    <Border.WidthRequest>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="150"
                                 Tablet="180"
                                 Desktop="180"/>
                    </Border.WidthRequest>
                    <Border.HeightRequest>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="150"
                                 Tablet="180"
                                 Desktop="180"/>
                    </Border.HeightRequest>
                    <Border.Background>
                        <RadialGradientBrush Center="0.5,0.5" Radius="1.0">
                            <GradientStop Color="#7cc8a5" Offset="0.0" />
                            <GradientStop Color="#5cb88d" Offset="1.0" />
                        </RadialGradientBrush>
                    </Border.Background>
                    <Border.Shadow>
                        <Shadow Brush="#7cc8a5"
                                Offset="0,12"
                                Radius="35"
                                Opacity="0.5"/>
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <Ellipse/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnActionButtonClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label x:Name="ActionIcon"
                               Text="▶"
                               TextColor="White"
                               HorizontalOptions="Center"
                               FontAttributes="Bold"
                               Margin="8,0,0,0">
                            <Label.FontSize>
                                <OnIdiom x:TypeArguments="x:Double"
                                         Phone="42"
                                         Tablet="52"
                                         Desktop="52"/>
                            </Label.FontSize>
                        </Label>
                        <Label x:Name="ActionText"
                               Text="START"
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalOptions="Center">
                            <Label.FontSize>
                                <OnIdiom x:TypeArguments="x:Double"
                                         Phone="16"
                                         Tablet="20"
                                         Desktop="20"/>
                            </Label.FontSize>
                        </Label>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>
    </ScrollView>

        <!-- Menu Flyout -->
            <Border x:Name="MenuFlyout"
                IsVisible="False"
                Opacity="0"
                HorizontalOptions="End"
                VerticalOptions="Start"
                BackgroundColor="{StaticResource DarkSurface}"
                StrokeThickness="1"
                Stroke="#40BB00FF">
                <Border.Padding>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="12"
                             Tablet="16"
                             Desktop="16"/>
                </Border.Padding>
                <Border.Margin>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="8,4"
                             Tablet="10,5"
                             Desktop="10,5"/>
                </Border.Margin>
                <Border.MinimumWidthRequest>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="160"
                             Tablet="180"
                             Desktop="180"/>
                </Border.MinimumWidthRequest>
                <Border.Shadow>
                <Shadow Brush="#80BB00FF"
                        Offset="0,8"
                        Radius="25"
                        Opacity="0.35"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="12">
                <Label Text="⚙️ Settings"
                       TextColor="{StaticResource DarkTextPrimary}"
                       FontAttributes="Bold"
                       Margin="0,0,0,8">
                    <Label.FontSize>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="14"
                                 Tablet="16"
                                 Desktop="16"/>
                    </Label.FontSize>
                </Label>
                
                <!-- Voice Detector Button -->
                <components:SettingsMenuItem Icon="🎤"
                                            Text="Voice Detector"
                                            TextColor="{StaticResource DarkTextPrimary}"
                                            Clicked="OnVoiceDetectorClicked"/>
            </VerticalStackLayout>
        </Border>

        <!-- Modal Overlay -->
        <Grid x:Name="ModalContainer"
              IsVisible="False"
              Opacity="0"
              BackgroundColor="#80000000"
              ZIndex="1000"
              HorizontalOptions="Fill"
              VerticalOptions="Fill">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnModalBackgroundTapped"/>
            </Grid.GestureRecognizers>
            
            <Border x:Name="ModalContentBorder"
                    BackgroundColor="#0D0D18"
                    StrokeThickness="2"
                    Stroke="#7000FFFF"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    MaximumWidthRequest="400"
                    Scale="0.9"
                    Margin="20">
                <Border.Padding>
                    <OnIdiom x:TypeArguments="Thickness"
                             Phone="20"
                             Tablet="24"
                             Desktop="24"/>
                </Border.Padding>
                <Border.Shadow>
                    <Shadow Brush="#9000FFFF"
                            Offset="0,12"
                            Radius="45"
                            Opacity="0.7"/>
                </Border.Shadow>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24"/>
                </Border.StrokeShape>
                <!-- Content will be set dynamically -->
            </Border>
        </Grid>
    </Grid>

</ContentPage>
