<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interpreter.Maui.Components.SettingsMenuItem"
             x:Name="ThisControl">
    
    <ContentView.Resources>
        <Color x:Key="ColorSurfaceLow">#0B1020</Color>
        <Color x:Key="ColorTextPrimary">#F9FAFB</Color>
        <SolidColorBrush x:Key="BrushSurfaceLow" Color="{StaticResource ColorSurfaceLow}" />
    </ContentView.Resources>
    
    <Border Background="{StaticResource BrushSurfaceLow}"
            StrokeThickness="0"
            Padding="8">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped"/>
        </Border.GestureRecognizers>
        <HorizontalStackLayout Spacing="12">
            <Label x:Name="IconLabel"
                   Text="{Binding Icon, Source={x:Reference ThisControl}}"
                   TextColor="{StaticResource ColorTextPrimary}"
                   VerticalOptions="Center">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="18"
                             Tablet="20"
                             Desktop="20"/>
                </Label.FontSize>
            </Label>
            <Label x:Name="TextLabel"
                   Text="{Binding Text, Source={x:Reference ThisControl}}"
                   TextColor="{Binding TextColor, Source={x:Reference ThisControl}, FallbackValue={StaticResource ColorTextPrimary}}"
                   VerticalOptions="Center">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="13"
                             Tablet="14"
                             Desktop="14"/>
                </Label.FontSize>
            </Label>
        </HorizontalStackLayout>
    </Border>
    
</ContentView>
