<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interpreter.Maui.Components.TranscriptCard"
             x:Name="ThisControl">
    
    <Border BackgroundColor="{Binding CardBackgroundColor, Source={x:Reference ThisControl}, FallbackValue=#18202B}"
            StrokeThickness="1"
            Stroke="{Binding CardStroke, Source={x:Reference ThisControl}, FallbackValue=#40FFFFFF}">
        <Border.Padding>
            <OnIdiom x:TypeArguments="Thickness"
                     Phone="16"
                     Tablet="24"
                     Desktop="24"/>
        </Border.Padding>
        <Border.HeightRequest>
            <OnIdiom x:TypeArguments="x:Double"
                     Phone="120"
                     Tablet="140"
                     Desktop="140"/>
        </Border.HeightRequest>
        <Border.Shadow>
            <Shadow Brush="#40000000"
                    Offset="0,8"
                    Radius="20"
                    Opacity="0.2"/>
        </Border.Shadow>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="24"/>
        </Border.StrokeShape>
        <ScrollView>
            <Label x:Name="TranscriptLabel"
                   Text="{Binding TranscriptText, Source={x:Reference ThisControl}}"
                   TextColor="{Binding TextColor, Source={x:Reference ThisControl}, FallbackValue=White}"
                   LineHeight="1.5">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="14"
                             Tablet="16"
                             Desktop="16"/>
                </Label.FontSize>
            </Label>
        </ScrollView>
    </Border>
    
</ContentView>
