<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interpreter.Maui.Components.PickerCard"
             x:Name="ThisControl">
    
    <Border BackgroundColor="{Binding CardBackgroundColor, Source={x:Reference ThisControl}, FallbackValue=#18202B}"
            StrokeThickness="1"
            Stroke="{Binding CardStroke, Source={x:Reference ThisControl}, FallbackValue=#40FFFFFF}">
        <Border.Padding>
            <OnIdiom x:TypeArguments="Thickness"
                     Phone="16,12"
                     Tablet="20,16"
                     Desktop="20,16"/>
        </Border.Padding>
        <Border.Shadow>
            <Shadow Brush="#40000000"
                    Offset="0,10"
                    Radius="30"
                    Opacity="0.3"/>
        </Border.Shadow>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20"/>
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="8">
            <Label Text="{Binding Title, Source={x:Reference ThisControl}}"
                   TextColor="{Binding TitleColor, Source={x:Reference ThisControl}, FallbackValue=#BB86FC}"
                   FontAttributes="Bold">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="13"
                             Tablet="14"
                             Desktop="14"/>
                </Label.FontSize>
            </Label>
            <Picker x:Name="InnerPicker"
                    TextColor="White"
                    TitleColor="#80FFFFFF"
                    Title="{Binding PickerTitle, Source={x:Reference ThisControl}}"
                    ItemsSource="{Binding ItemsSource, Source={x:Reference ThisControl}}"
                    SelectedIndex="{Binding SelectedIndex, Source={x:Reference ThisControl}, Mode=TwoWay}"
                    SelectedIndexChanged="OnSelectedIndexChanged">
                <Picker.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="14"
                             Tablet="16"
                             Desktop="16"/>
                </Picker.FontSize>
            </Picker>
        </VerticalStackLayout>
    </Border>
    
</ContentView>

