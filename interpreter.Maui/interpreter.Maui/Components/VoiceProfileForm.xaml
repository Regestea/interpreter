<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interpreter.Maui.Components.VoiceProfileForm">
    
    <Border BackgroundColor="#1A1F2E"
            StrokeThickness="1"
            Stroke="#374151"
            Padding="20">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16"/>
        </Border.StrokeShape>
        
        <VerticalStackLayout Spacing="16">
            <Label Text="Create New Voice Profile"
                   TextColor="#7cc8a5"
                   FontSize="16"
                   FontAttributes="Bold"/>
            
            <Label Text="Record a voice sample to create a new profile for voice detection."
                   TextColor="#9CA3AF"
                   FontSize="13"/>
            
            <!-- Name Entry -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Voice Name"
                       TextColor="#7cc8a5"
                       FontSize="14"
                       FontAttributes="Bold"/>
                
                <Border x:Name="NameEntryBorder"
                        BackgroundColor="#1F2937"
                        StrokeThickness="1"
                        Stroke="#374151"
                        Padding="12,8">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Entry x:Name="NameEntry"
                           Placeholder="Enter a name for this voice profile"
                           PlaceholderColor="#6B7280"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           FontSize="14"
                           TextChanged="OnNameTextChanged"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- Voice Recording Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Voice Sample"
                       TextColor="#7cc8a5"
                       FontSize="14"
                       FontAttributes="Bold"/>
                
                <Label Text="Tap the button below to record a voice sample"
                       TextColor="#9CA3AF"
                       FontSize="12"/>
                
                <!-- Record Button -->
                <Border x:Name="RecordButton"
                        BackgroundColor="#EF4444"
                        StrokeThickness="0"
                        HeightRequest="64"
                        WidthRequest="64"
                        HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <Ellipse/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRecordClicked"/>
                    </Border.GestureRecognizers>
                    <Label x:Name="RecordIcon"
                           Text="🎙️"
                           FontSize="28"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                
                <Label x:Name="RecordingStatusLabel"
                       Text="Ready to record"
                       TextColor="#9CA3AF"
                       FontSize="12"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
            
            <!-- Save Button -->
            <Border x:Name="SaveButton"
                    BackgroundColor="#7cc8a5"
                    StrokeThickness="0"
                    Padding="16,12"
                    Margin="0,8,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSaveClicked"/>
                </Border.GestureRecognizers>
                <Label Text="Save Voice Profile"
                       TextColor="White"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </Border>
        </VerticalStackLayout>
    </Border>
    
</ContentView>
