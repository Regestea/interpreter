<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interpreter.Maui.Components.IconButton"
             x:Name="ThisControl">
    
    <Border BackgroundColor="{Binding CardBackgroundColor, Source={x:Reference ThisControl}, FallbackValue=#18202B}"
            StrokeThickness="1"
            Stroke="{Binding CardStroke, Source={x:Reference ThisControl}, FallbackValue=#40FFFFFF}">
        <Border.Padding>
            <OnIdiom x:TypeArguments="Thickness"
                     Phone="12,16"
                     Tablet="16,20"
                     Desktop="16,20"/>
        </Border.Padding>
        <Border.Shadow>
            <Shadow Brush="{Binding ShadowColor, Source={x:Reference ThisControl}, FallbackValue=#FF6B6B}"
                    Offset="0,6"
                    Radius="15"
                    Opacity="0.2"/>
        </Border.Shadow>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="18"/>
        </Border.StrokeShape>
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped"/>
        </Border.GestureRecognizers>
        <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
            <Label Text="{Binding Icon, Source={x:Reference ThisControl}}"
                   HorizontalOptions="Center">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="24"
                             Tablet="28"
                             Desktop="28"/>
                </Label.FontSize>
            </Label>
            <Label Text="{Binding Text, Source={x:Reference ThisControl}}"
                   TextColor="{Binding TextColor, Source={x:Reference ThisControl}, FallbackValue=#FF6B6B}"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="11"
                             Tablet="13"
                             Desktop="13"/>
                </Label.FontSize>
            </Label>
        </VerticalStackLayout>
    </Border>
    
</ContentView>
