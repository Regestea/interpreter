<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interpreter.Maui.Components.IconButton"
             x:Name="ThisControl">
    
    <Border Background="{Binding CardBackgroundColor, Source={x:Reference ThisControl}, FallbackValue=#020617}"
            StrokeThickness="1"
            Stroke="#1F2937">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16"/>
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="#33000000" Offset="0,6" Radius="15" Opacity="0.3"/>
        </Border.Shadow>
        <Border.Padding>
            <OnIdiom x:TypeArguments="Thickness"
                     Phone="12,14"
                     Tablet="16,18"
                     Desktop="16,18"/>
        </Border.Padding>
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped"/>
        </Border.GestureRecognizers>
        <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
            <Label Text="{Binding Icon, Source={x:Reference ThisControl}}"
                   TextColor="{Binding TextColor, Source={x:Reference ThisControl}, FallbackValue=#E5E7EB}"
                   HorizontalOptions="Center">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="22"
                             Tablet="24"
                             Desktop="24"/>
                </Label.FontSize>
            </Label>
            <Label Text="{Binding Text, Source={x:Reference ThisControl}}"
                   TextColor="{Binding TextColor, Source={x:Reference ThisControl}, FallbackValue=#E5E7EB}"
                   FontAttributes="Bold"
                   Opacity="0.9"
                   HorizontalTextAlignment="Center">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="11"
                             Tablet="13"
                             Desktop="13"/>
                </Label.FontSize>
            </Label>
        </VerticalStackLayout>
    </Border>
</ContentView>
