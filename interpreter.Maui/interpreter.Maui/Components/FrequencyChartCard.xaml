<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="interpreter.Maui.Components.FrequencyChartCard"
             x:Name="ThisControl">
    
    <Border BackgroundColor="{Binding CardBackgroundColor, Source={x:Reference ThisControl}, FallbackValue=#18202B}"
            StrokeThickness="1"
            Stroke="{Binding CardStroke, Source={x:Reference ThisControl}, FallbackValue=#40FFFFFF}">
        <Border.Padding>
            <OnIdiom x:TypeArguments="Thickness"
                     Phone="16"
                     Tablet="20"
                     Desktop="20"/>
        </Border.Padding>
        <Border.HeightRequest>
            <OnIdiom x:TypeArguments="x:Double"
                     Phone="130"
                     Tablet="150"
                     Desktop="150"/>
        </Border.HeightRequest>
        <Border.Shadow>
            <Shadow Brush="#40000000"
                    Offset="0,8"
                    Radius="20"
                    Opacity="0.2"/>
        </Border.Shadow>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="24"/>
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="12">
            <Label Text="{Binding Title, Source={x:Reference ThisControl}}"
                   TextColor="{Binding TitleColor, Source={x:Reference ThisControl}, FallbackValue=#7cc8a5}"
                   FontAttributes="Bold">
                <Label.FontSize>
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="13"
                             Tablet="14"
                             Desktop="14"/>
                </Label.FontSize>
            </Label>
            <GraphicsView x:Name="ChartView" 
                          HeightRequest="100"
                          Drawable="{Binding ChartDrawable, Source={x:Reference ThisControl}}"/>
        </VerticalStackLayout>
    </Border>
    
</ContentView>
